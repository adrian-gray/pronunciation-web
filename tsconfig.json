{
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "jsx": "preserve",
    "sourceMap": true,
    "isolatedModules": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "files": [
    "@types/PronounceWeb.ts",
    "@types/phaser/phaser.d.ts",
    "@types/globals.d.ts"
  ],
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
