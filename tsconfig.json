{
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "esModuleInterop": true,
    "jsx": "react",
    "sourceMap": true,
    "isolatedModules": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./@types"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
